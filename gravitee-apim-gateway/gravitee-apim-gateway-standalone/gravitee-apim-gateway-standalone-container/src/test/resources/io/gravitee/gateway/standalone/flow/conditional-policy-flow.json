{
  "id": "my-api",
  "name": "my-api",
  "gravitee": "2.0.0",
  "proxy": {
    "context_path": "/test",
    "endpoints": [
      {
        "name": "default",
        "target": "http://localhost:8080/team",
        "http": {
          "connectTimeout": 3000,
          "readTimeout": 60000
        }
      }
    ]
  },
  "flows": [
    {
      "name": "New flow",
      "path-operator": {
        "operator": "STARTS_WITH",
        "path": "/"
      },
      "methods": [],
      "pre": [
        {
          "policy": "header-policy1",
          "name": "My policy",
          "description": "Step description",
          "condition": "{#request.headers['conditionHeader'][0].equals(\"condition-ok\")}",
          "configuration": {}
        },
        {
          "policy": "on-request-policy",
          "name": "My policy",
          "description": "Step description",
          "configuration": {}
        }
      ],
      "post": [],
      "enabled": true
    }
  ]
}

{
  "compilerOptions": {
    "target": "ES2020",
    "downlevelIteration": true,
    "lib": ["ES2020", "dom"],
    "types": ["./types", "cypress", "node", "node-fetch", "jsonwebtoken"],
    "baseUrl": ".",
    "resolveJsonModule": true,
    "module": "Node16",
    "moduleResolution": "Node16",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "paths": {
      "@fakers/*": ["ui-test/fixtures/fakers/*"],
      "@keys/*": ["ui-test/fixtures/keys/*"],
      "@model/*": ["ui-test/model/*"],
      "@commands/*": ["ui-test/commands/*"],
      "@api-test-resources/*": ["<rootDir>/api-test/resources/$1"],
      "@lib/jest-utils": ["lib/jest-utils"],
      "@gravitee/utils/*": ["<rootDir>/lib/utils/$1"]
    }
  },
  "include": ["**/*.ts"]
}

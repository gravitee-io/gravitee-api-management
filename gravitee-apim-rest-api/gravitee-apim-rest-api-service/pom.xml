		<!-- Test -->
		<dependency>
			<groupId>io.gravitee.apim.rest.api</groupId>
			<artifactId>gravitee-apim-rest-api-test-fixtures</artifactId>
			<version>${project.version}</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>org.springframework.data</groupId>

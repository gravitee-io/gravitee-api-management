{
  "size": 0,
  "query": {
    "bool": {
      "must": [],
      "filter": [
        {
          "range": {
            "@timestamp": {
              "gte": "now-1h"
            }
          }
        }
      ]
    }
  },
  "aggs": {
    "requests_by_interval": {
      "auto_date_histogram": {
        "field": "@timestamp",
        "buckets": 10
      },
      "aggs": {
        "MESSAGE_COUNT": {
          "sum": {
            "field": "count-increment"
          }
        },
        "time_range": {
          "stats": {
            "field": "@timestamp"
          }
        },
        "rps": {
          "bucket_script": {
            "buckets_path": {
              "count": "MESSAGE_COUNT",
              "min_time": "time_range.min",
              "max_time": "time_range.max"
            },
            "script": {
              "source": "params.min_time != null && params.max_time != null && (params.max_time - params.min_time) > 0 ? params.count / ((params.max_time - params.min_time) / 1000) : 0"
            }
          }
        }
      }
    }
  }
}

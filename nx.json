{
    "$schema": "./node_modules/nx/schemas/nx-schema.json",
    "affected": {
        "defaultBase": "master"
    },
    "namedInputs": {
        "default": ["{projectRoot}/**/*", "sharedGlobals"],
        "production": [
            "default",
            "!{projectRoot}/**/?(*.)+(spec|test).[jt]s?(x)?(.snap)",
            "!{projectRoot}/tsconfig.spec.json",
            "!{projectRoot}/.eslintrc.json",
            "!{projectRoot}/eslint.config.js",
            "!{projectRoot}/**/*.stories.@(js|jsx|ts|tsx|mdx)",
            "!{projectRoot}/.storybook/**/*",
            "!{projectRoot}/tsconfig.storybook.json"
        ],
        "sharedGlobals": ["{workspaceRoot}/.prettierrc", "{workspaceRoot}/tsconfig.base.json"]
    },
    "targetDefaults": {
        "build": {
            "dependsOn": ["^build"],
            "inputs": ["production", "^production"],
            "cache": true
        },
        "test": {
            "inputs": ["default", "^production", "{workspaceRoot}/jest.preset.js"],
            "cache": true
        },
        "lint-eslint": {
            "executor": "@nx/eslint:lint",
            "options": {
                "lintFilePatterns": ["{projectRoot}/**/*.ts", "{projectRoot}/**/*.html"]
            },
            "inputs": ["default"],
            "cache": true
        },
        "lint-license": {
            "executor": "nx:run-commands",
            "options": {
                "fix": false,
                "cwd": "{projectRoot}",
                "command": "sh -c 'case \"$*\" in *--fix*) license-check-and-add add -f license-check-config.json ;; *) license-check-and-add check -f license-check-config.json ;; esac' _"
            },
            "cache": true
        },
        "lint-prettier": {
            "executor": "nx:run-commands",
            "options": {
                "command": "sh -c 'case \"$*\" in *--fix*) prettier --write \"{projectRoot}/**/*.{ts,js,html,scss,css,json}\" ;; *) prettier --check \"{projectRoot}/**/*.{ts,js,html,scss,css,json}\" ;; esac' _"
            },
            "inputs": ["default"],
            "cache": true
        },
        "lint": {
            "dependsOn": [
                { "target": "lint-eslint", "params": "forward" },
                { "target": "lint-license", "params": "forward" },
                { "target": "lint-prettier", "params": "forward" }
            ],
            "cache": true
        },
        "serve": {}
    },
    "generators": {
        "@nx/angular:application": {
            "style": "scss",
            "linter": "eslint",
            "unitTestRunner": "jest",
            "e2eTestRunner": "none"
        },
        "@nx/angular:library": {
            "linter": "eslint",
            "unitTestRunner": "jest"
        },
        "@nx/angular:component": {
            "style": "scss"
        }
    }
}

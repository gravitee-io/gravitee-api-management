{
  "id": "spg-conditional-two-headers-on-response",
  "name": "spg-conditional-two-headers-on-response",
  "environmentId": "DEFAULT",
  "version": "1",
  "phase": "RESPONSE",
  "policies": [
    {
      "name": "Transform headers Inside 0",
      "description": "",
      "enabled": true,
      "policy": "transform-headers",
      "condition": "{#request.headers['execute-shared-policy-group-first-step'][0] == 'yes'}",
      "configuration": {
        "scope": "RESPONSE",
        "addHeaders": [
          {
            "name": "X-Response-Header-Inside-0",
            "value": "Header Inside 0"
          }
        ]
      }
    },
    {
      "name": "Transform headers Inside 1",
      "description": "",
      "enabled": true,
      "policy": "transform-headers",
      "configuration": {
        "scope": "RESPONSE",
        "addHeaders": [
          {
            "name": "X-Response-Header-Inside-1",
            "value": "Header Inside 1"
          }
        ]
      }
    }
  ]
}